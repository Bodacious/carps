# Test CARPS IPC.  Used for unit testing and as part of the wizard. 
require "drb"

begin
   url = ARGV.shift
   puts "Listening on " + url
   mut = DRbObject.new nil, url
   mut.mutate!
   puts mut.works?
rescue Exception => e
   puts "ERROR:"
   puts e
end
puts "Press enter to exit"
gets
