# Test CARPS IPC.  Used for unit testing and as part of the wizard. 
require "drb"

require "highline"

def its_over status=0
   h = HighLine.new
   h.ask "Press enter to exit"
   exit status
end

url = ""
if ARGV[0] == "-p"
   url = ARGV[1]
elsif ARGV[0] == "-h"
   url = ARGV[2]
else
   url = ARGV[0]
end

unless url
   its_over 1
end
puts "Listening on " + url

begin
   mut = DRbObject.new nil, url
   mut.mutate!
   puts mut.works?
rescue StandardError => e
   puts "ERROR:"
   puts e
   its_over 1
end

its_over
