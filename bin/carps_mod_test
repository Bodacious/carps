# Test CARPS mod launching.  Used for unit testing and as part of the wizard. 

require "carps/mod"
require "carps/util"

module TestMod

   module Player      
      
      class Mod

      end

      def Player::create_mod mailer
         puts "Creating Player mod with #{mailer}"
         Mod.new
      end

      def Player::launch mod
         puts "Launching mod: #{mod.class}"
      end

   end

   module DM

      class Mod
      end

      def DM::create_mod campaign, mailer
         puts "Creating DM mod with #{mailer}, running campaign: #{campaign}"
         Mod.new
      end

      def DM::launch mod
         puts "Launching mod: #{mod.class}"
      end

   end

end

CARPS::Launcher.launch TestMod

CARPS::enter_quit
